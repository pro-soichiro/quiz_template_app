<h2>問題 編集</h2>
<div id="add_choice_btn" class="add_choice_btn">+</div>

<%= form_with model: @question, url: admin_question_path do |f| %>
	<div class="flex">
		<table>
			<thead>
				<tr>
					<th>カテゴリ</th>
					<th>問題文</th>
					<th>画像</th>
					<th>選択肢</th>
				</tr>
			</thead>
			<tbody>
				<tr id="tr_parent_node">
					<td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
					<td><%= f.text_area :question_text, rows: 3 %></td>
					<td><%= f.attachment_field :image %>画像を選択する</td>
					<%= f.fields_for :choices do |choice| %>
					  <td>
    				  <%= choice.text_field :choice_text %>
              <%= choice.check_box :is_answer %>

					  </td>
				  <% end %>
				</tr>
				<tr>
				  <td></td>
				  <td></td>
				  <td></td>
				  <% @choices.each do |choice| %>
				    <td>
              <%= link_to "削除", admin_choice_path(choice.id),method: :delete %>
				    </td>
				  <% end %>
				</tr>
			</tbody>
		</table>
	</div>
	<div>
		<%= f.submit "保存する" %>
	</div>
<% end %>