<%= form_with(model: question, url: url, local: true) do |f| %>
	<%= render 'layouts/error_messages', resource: question %>

	<div>CSVで読み込む機能</div>

	<div class="flex">
		<table>
			<thead>
				<tr>
					<th><%= f.label :category_id, "カテゴリ" %></th>
					<th><%= f.label :question_text, "問題文" %></th>
					<th><%= f.label :image, "画像" %></th>
					<th><%= f.label :choice_text, "選択肢（正解）" %></th>
					<th><%= f.label :choise_text, "選択肢" %></th>
					<th><%= f.label :choice_text, "選択肢" %></th>
					<th><%= f.label :choise_text, "選択肢" %></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
					<td><%= f.text_area :question_text, rows: 3 %></td>
					<td><%= f.file_field :image %>画像を選択する</td>

					<td><%= f.text_field :choice_text,:placeholder => "正解となる答えを入力してください" %></td>
					<td><%= f.text_field :choice_text,:placeholder => "正解となる答えを入力してください" %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div>
		<%= f.submit submit %>
	</div>
<% end %>