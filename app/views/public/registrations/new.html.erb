<h2>新規会員登録</h2>
<%= form_with model: @staff, url: staff_registration_path, local: true do |f| %>
<%= render 'layouts/error_messages', resource: @staff %>
  <table>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :last_name,:placeholder =>"姓" %></td>
      <td><%= f.text_field :first_name,:placeholder =>"名" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana,:placeholder =>"セイ" %></td>
      <td><%= f.text_field :first_name_kana,:placeholder =>"メイ" %></td>
    </tr>
    <tr>
      <th>Employ Number</th>
      <td colspan="2"><%= f.text_field :employ_number,:placeholder =>"000" %></td>
    </tr>
    <tr>
      <th>E-mail</th>
      <td colspan="2"><%= f.email_field :email,:placeholder =>"sample@mail.com" %></td>
    </tr>
    <tr>
      <th>パスワード(6文字以上)</th>
      <td colspan="2"><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <td colspan="2"><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>